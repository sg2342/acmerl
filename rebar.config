%% -*- erlang -*-
{erl_opts, [debug_info]}.
{deps, [ { base64url
	 , {git, "https://github.com/dvv/base64url", {tag, "1.0.1"}}}
       ]}.

{xref_warnings, true}.
{xref_checks, [undefined_function_calls
              ,undefined_functions
              ,locals_not_used
%%            ,exports_not_used %% needs '-ignore_xref({F,Arity})' directives
              ,deprecated_function_calls
              ,deprecated_functions]}.

{profiles,
 [ {test, [ {deps, [ { jsone
		     , {git, "https://github.com/sile/jsone",{tag,"1.5.2"}}}
                   ]}
	  , {cover_enabled, true}
	  , {cover_opts, [verbose]}
          ]}
 ]}.
